<Window x:Class="WPF2_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2_Server"
        mc:Ignorable="d"
        Title="Group Chat Server" Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Key="LoggedUsersTemplate"  DataType="ListViewItem">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Text="{Binding Username}"
                       MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListViewItem}, Path=ActualWidth}"
                       ></TextBlock>
        </DataTemplate>
        <DataTemplate x:Key="ServerLogTemplate"  DataType="ListViewItem">
            <TextBlock HorizontalAlignment="Left" Text="{Binding Message}"
                       TextWrapping="Wrap"></TextBlock>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <GroupBox Margin="10" Header="Connection Info" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontWeight="Bold" Content="Username:"></Label>
                        <TextBox Name="UsernameTextBox" Grid.Row="1" Margin="0,5,5,5"></TextBox>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontWeight="Bold" Content="Address:"></Label>
                        <TextBox Name="AddressTextBox" Grid.Row="1" Margin="0,5,5,5"></TextBox>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontWeight="Bold" Content="Password:"></Label>
                        <PasswordBox Name="PasswordBox" Grid.Row="1" Margin="5,5,0,5"></PasswordBox>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontWeight="Bold" Content="Port:"></Label>
                        <TextBox Name="PortTextBox" Grid.Row="1" Margin="5,5,0,5"></TextBox>
                    </Grid>
                </Grid>
                <Button Name="StartServerButton"
                    Height="Auto"
                        HorizontalAlignment="Right"
                        Width="100" Click="StartServer">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ServerConnection.IsRunning}" Value="True">
                                    <Setter Property="Content" Value="Stop"></Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ServerConnection.IsRunning}" Value="False">
                                    <Setter Property="Content" Value="Start"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </GroupBox>
        <ListView Grid.Row="1" Grid.Column="0"
                  Margin="10"
                  ItemsSource="{Binding ServerLogs}"
                  ItemTemplate="{StaticResource ServerLogTemplate}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"></ListView>
        <Grid Grid.Row="2" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MaxHeight="100">
                </RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Height="Auto">
                <TextBox Name ="InputTextBox" TextWrapping="Wrap" AcceptsReturn="True" PreviewKeyDown="KeyDownHandler" Height="Auto" MaxHeight="100">
                </TextBox>
            </ScrollViewer>
            <Button Grid.Column="1" Margin="5,0,0,0" Width="100" Click="SendMessage" Height="Auto">Send</Button>
        </Grid>
        <ScrollViewer Grid.Row="0"
                  Grid.Column="1" 
                  VerticalScrollBarVisibility="Auto"
                  Grid.RowSpan="2"
                  Margin="10">
            <ListView x:Name="ClientListView"
                  SelectionMode="Multiple"
                  HorizontalContentAlignment="Stretch"
                  ItemsSource="{Binding Users}"
                  ItemTemplate="{StaticResource LoggedUsersTemplate}">
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridView.Columns>
                            <GridViewColumn Header="Logged Clients" Width="{Binding ActualWidth, ElementName=ClientListView}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                Text="{Binding Username}" 
                                HorizontalAlignment="Stretch"
                                TextAlignment="Center" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <Button Grid.Row="2" Grid.Column="1" Margin="10" Click="KickEventHandler">
            Kick
        </Button>
    </Grid>
</Window>
